<!DOCTYPE html>
<html lang="en">
<% include ../common/html-head %>

<body>
    <!-- https://getbootstrap.com/docs/4.1/examples/dashboard/ -->
    <% include ../common/header %>
    <div class="container-fluid">
        <div class="row">
            <% include ../common/side-nav %>
        </div>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="table-title">
                <span class="h2">product list</span>
                <input class="btn btn-sm btn-success btn-new" type="button" value="new" data-toggle="modal" data-type="new"
                    data-target="#editModal" />
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>pid</th>
                            <th>catid</th>
                            <th>name</th>
                            <th>price</th>
                            <th>description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%products.forEach((item) => {%>
                        <tr>
                            <td><%=item.pid%></td>
                            <td><%=item.catid%></td>
                            <td><%=item.name%></td>
                            <td><%=item.price%></td>
                            <td><%=item.description%></td>
                            <td>
                                <input class="btn btn-sm btn-primary" type="button" value="update" data-toggle="modal"
                                    data-type="update" data-target="#editModal" />
                            </td>
                            <td>
                                <input class="btn btn-sm btn-danger" type="button" value="delete" data-toggle="modal"
                                    data-target="#deleteModal" />
                            </td>
                        </tr>
                        <%})%>
                    </tbody>
                </table>
            </div>
            <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalTitle">delete product</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body"></div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary _cancel" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary _ok">Ok</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editModalTitle">update product</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group" id="cateSelectWrap" style="display: none">
                                    <label for="catSelect">category select</label>
                                    <select class="form-control" id="catSelect">
                                        <%categories.forEach((item) => {%>
                                        <option data-id="<%=item.catid%>"><%=item.name%></option>
                                        <%})%>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="pdNameInput">name</label>
                                    <input type="text" class="form-control" id="pdNameInput" placeholder="enter name">
                                </div>
                                <div class="form-group">
                                    <label for="pdPriceInput">price</label>
                                    <input type="text" class="form-control" id="pdPriceInput" placeholder="enter price">
                                </div>
                                <div class="form-group">
                                    <label for="pdDesTextarea">description</label>
                                    <textarea class="form-control" id="pdDesTextarea" placeholder="enter description"></textarea>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary _cancel" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary _ok">Ok</button>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <% include ../common/footer %>
</body>

</html>